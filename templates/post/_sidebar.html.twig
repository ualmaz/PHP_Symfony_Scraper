<div class="blog_right_sidebar">
    <aside class="single_sidebar_widget search_widget">
        <form method="get" action="{{ path('app_post_search') }}">
            <div class="form-group">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="search"
                           placeholder='{{'app.sidebar.search.placeholder'|trans}}'
                           onfocus="this.placeholder = ''"
                           onblur="this.placeholder = '{{'app.sidebar.search.placeholder'|trans}}'>
                    <div class="input-group-append">
                        <button class="btn" type="button"><i class="ti-search"></i></button>
                    </div>
                </div>
            </div>
            <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
                    type="submit">{{ 'app.sidebar.button.search'|trans }}</button>
        </form>
    </aside>
</div>