{% extends 'base.html.twig' %}

{% block slider %}
    <!-- bradcam_area  -->
    <div class="bradcam_area bradcam_about">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="bradcam_text text-center">
                        <h3>{{ 'app.about.title'|trans }}</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ bradcam_area  -->
{% endblock %}

{% block content %}
    <section class="sample-text-area">
        <div class="container">
            <h3 class="text-heading">
                {{ 'app.about.heading'|trans }}
            </h3>
            <p class="sample-text">
                {{ 'app.about.main_text'|trans}}
            </p>
        </div>
        <div class="container">
            <h3 class="text-heading">
                {{ 'app.about.map'|trans }}
            </h3>
            <div id="map" style="height: 400px; "></div>
        </div>

    </section>
    <section class="sample-text-area">

    </section>

{% endblock %}

{% block contact %}

{% endblock %}

{% block javascripts %}
    <script src="https://maps.api.2gis.ru/2.0/loader.js?pkg=full"></script>
    <script type="text/javascript">
        var map;
        var center = [42.880986, 74.490680];

        DG.then(function () {
            map = DG.map('map', {
                center: center,
                zoom: 16
            });

            DG.marker(center).addTo(map);
        });
    </script>
{% endblock %}